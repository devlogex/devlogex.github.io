---
import BaseLayout from '../layouts/BaseLayout.astro';
import GoalProgress from '../components/GoalProgress';
import goals from '../data/goals.json';
import { frontmatter as identityFrontmatter } from '../data/identity.md';

const { statements } = identityFrontmatter;
---

<BaseLayout title="Goals - devlogex">
  <div class="container">
    <header class="page-header">
      <h1>My Goals</h1>
      <p>Tracking progress towards my personal and professional objectives</p>
    </header>

    <section class="identity-section">
      <h2>Who Am I</h2>
      <div class="identity-grid">
        {statements.map((item: { icon: string; text: string; color: string }) => (
          <div class="identity-card" style={`--accent: ${item.color}`}>
            <span class="identity-icon">{item.icon}</span>
            <p class="identity-text">{item.text}</p>
          </div>
        ))}
      </div>
    </section>

    <div class="goals-grid">
      {goals.map((goal) => (
        <GoalProgress goal={goal} client:load />
      ))}
    </div>

  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    color: var(--color-text-muted);
    font-size: 1.125rem;
  }

  .identity-section {
    margin-bottom: 3rem;
  }

  .identity-section h2 {
    margin-bottom: 1.25rem;
    font-size: 1.25rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .identity-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  @media (max-width: 768px) {
    .identity-grid {
      grid-template-columns: 1fr;
    }
  }

  .identity-card {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-left: 3px solid var(--accent);
    border-radius: 0.75rem;
    padding: 1.25rem 1.5rem;
    display: flex;
    align-items: flex-start;
    gap: 0.875rem;
  }

  .identity-icon {
    font-size: 1.5rem;
    line-height: 1;
    flex-shrink: 0;
    margin-top: 0.1rem;
  }

  .identity-text {
    color: var(--color-text);
    font-size: 0.9375rem;
    line-height: 1.5;
    margin: 0;
  }

  .goals-grid {
    display: grid;
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .how-to-update {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0.75rem;
    padding: 2rem;
    margin-top: 3rem;
  }

  .how-to-update h2 {
    margin-bottom: 1rem;
  }

  .instructions {
    color: var(--color-text-muted);
  }

  .instructions code {
    background: var(--color-bg);
    padding: 0.25rem 0.5rem;
    border-radius: 0.25rem;
    font-family: 'Courier New', monospace;
  }
</style>
